{% extends "WotoogUserBundle::layout.html.twig" %}
    {% block cover %}
    {% endblock %}
    {% block quickaccess %}
    <div class="col-xs-12 centered-pills">
            <ul class="nav nav-pills">
                {#<li class="disabled"><a href="#" class="disabled"><i class="glyphicon glyphicon-arrow-left"></i>Article précédent</a></li>#}
                    <li class="active"><a href="{{ path('wotoog_post_index', {'blog_id':blog.id}) }}"><i class="glyphicon glyphicon-book"></i> Retourner au blog</a></li>
                    {% if (canEdit) %}
                        <li><a href="{{ path('wotoog_post_edit', {'blog_id':blog.id, 'id':post.id}) }}">
                                <i class="glyphicon glyphicon-pencil"></i> Modifier</a>
                        </li>
                    {% endif %}
                {#<li class="disabled"><a href="#" class="disabled">Article suivant <i class="glyphicon glyphicon-arrow-right"></i></a></li>#}
            </ul>
    </div>
    {% endblock quickaccess %}
{% block documentContent -%}
    <div class="page-header">
        <h1>{{ post.title }}</h1> <small>Mise à jour le  {{ post.updatedAt|date('d/m/Y à H:i:s') }}</small>
    </div>
    <div id="post">
    {{ post.content | raw }}
    </div>

    <div class="pull-right">
        <button type="button" class="btn btn-danger"><i
                    class="glyphicon glyphicon-thumbs-down"></i></button>
        <button type="button" class="btn btn-success"><i
                    class="glyphicon glyphicon-thumbs-up"></i></button>
        <button type="button" class="btn btn-info"><i
                    class="glyphicon glyphicon glyphicon-share"></i></button>
    </div>
<div class="blank-50"></div>
<div class="col-xs-12 no-padding no-margin box">
    {{ block('quickaccess') }}
</div>
{% endblock %}
