{% extends "WotoogUserBundle::layout.html.twig" %}

{% block documentContent -%}
    <div class="page-header">
        <h1>Editer le blog</h1>
    </div>

        <div class="alert alert-error">
            {{ form_errors(form) }}
        </div>

    <form action="{{ path('blog_update', {'id':blog.id}) }}" method="POST">
    <div class="form-group">
        <label for="visibility" class="control-label">Le blog est il visible pour tout le monde</label>
        <div class="input-group">
            <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-primary active">
                    <input type="radio" name="wotoog_blogbundle_blog[visibility]" id="option1" value="private" checked> Publique
                </label>
                <label class="btn btn-primary">
                    <input type="radio" name="wotoog_blogbundle_blog[visibility]" id="option2" value="public"> Priv√©e
                </label>
            </div>
            {#{{ form_widget(form.visibility) }}#}
        </div>
    </div>
    <div class="form-group">
        <label for="description" class="control-label">Description</label>
        <div class="col-xs-12 no-padding">
            {{ form_widget(form.description) }}
        </div>
    </div>
    {{ form_widget(form._token) }}
    {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-success pull-right'}, 'label': 'Sauvegarder' }) }}
    </form>
{% endblock %}
    {% block javascriptPageTreatment %}
    {{ parent() }}
    {{ tinymce_init() }}
{% endblock %}
